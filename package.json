{
  "name": "gdrive-sync-service",
  "version": "1.0.0",
  "description": "Resumable Google Drive synchronization service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/",
    "demo": "node demo-failure-recovery.js all",
    "demo:crash": "node demo-failure-recovery.js crash",
    "demo:retry": "node demo-failure-recovery.js job-retry",
    "demo:deadletter": "node demo-failure-recovery.js dead-letter",
    "demo:pause": "node demo-failure-recovery.js pause-resume",
    "demo:idempotency": "node demo-failure-recovery.js idempotency",
    "demo:inject-failed": "node demo-inject-failure.js create-failed-job",
    "demo:inject-dead": "node demo-inject-failure.js create-dead-job",
    "demo:inject-crash": "node demo-inject-failure.js interrupt-sync",
    "demo:state": "node demo-inject-failure.js show-state",
    "demo:reset": "node demo-inject-failure.js reset"
  },
  "keywords": [
    "google-drive",
    "sync",
    "backup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "googleapis": "^131.0.0",
    "sql.js": "^1.10.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  }
}
